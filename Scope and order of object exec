//--------------------------------------
#include <iostream>
using namespace std;

int _x = 10;
class Base
{
    int _x,_y;
public:
    void print()
    {
        cout << _x << "\t" << _y << endl;
    }
};

int main()
{
    Base b;
    b.print();
    return 0;
}


