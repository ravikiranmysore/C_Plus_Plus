//  Segmentation falut-> memory violation
//stack overflow,read violation,write violation and many more
#include <iostream>
using namespace std;

int main()
{
    int * p1 = NULL; --> this is pointing to stack for example, and you cannot access it, so segmentation fault.
    * p1 = 10;

    cout <<  *p1 << endl;

  return 0;
}

