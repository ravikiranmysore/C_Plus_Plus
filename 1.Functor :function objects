/*FUNCTOR : function objects
 * it holds states
 * it actually construct object with states(which holds member variables)
*/
#include<iostream>
using namespace std;

struct AddFunctor
{
    AddFunctor(int x): m_x(x){}         //--> saving state
    // int operator()(int x,int y)
    int operator()(int y)               //--> saving state
    {
        //return x + y;
        return m_x + y;
    }
    int m_x;
};

int Add(int x,int y)
{
    return x+y;
}

int main()
{
    int i = 1;
    int j = 2;
    
    Add(i,3);
    Add(j,3);
    
    /* AddFunctor o;
    o(i,3);
    o(j,3);

   DoSomething(int x,char c,float f,double d);
   then, if you want to just change c(char) then you have to rewrite everything
*/
    AddFunctor o(3);//Partially applied function
    o(i);
    o(j);
    return 0;
}
